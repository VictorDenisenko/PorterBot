<Window x:Class="PorterBot.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="MainWindow" Height="700" Width="960">
    <Grid x:Name="BackPanel">
        <Image x:Name="FacePhoto" Stretch="Uniform" Margin="0,0,0,50" MouseMove="FacePhoto_MouseMove" />
        <DockPanel DockPanel.Dock="Bottom">
            <Button x:Name="UnknownFace" Width="82" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"
                     Content="UnknownFace"
                     Click="UnknownFace_Click"/>
            <Button x:Name="PictureFolder" Width="82" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"
                     Content="PictureFolder"
                     Click="PictureFolder_ClickAsync" />
            <Button x:Name="BrowseButton" Width="82" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"
                     Content="BrowseForDetecting"
                     Click="BrowseButton_Click" />
        </DockPanel>
        <StatusBar VerticalAlignment="Bottom">
                <StatusBarItem>
                    <TextBlock Name="faceDescriptionStatusBar" />
                </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>
<!-- </snippet_xaml> -->